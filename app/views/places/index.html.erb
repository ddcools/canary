<div class="container">
  <p id="notice"><%= notice %></p>
  <table id="places_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <div id="custom_places_filter_container">
        Search : <input type="text" id="searchbox">
      </div>
      <tr>
        <th>Place name</th>
        <th>Type</th>
        <th>Lat</th>
        <th>Lng</th>
        <th>State</th>
      </tr>
    </thead>
    <tbody>
      <% @places.each do |place| %>
      <tr>
        <td><%= place.place_name %></td>
        <td><%= place.place_type %></td>
        <td><%= place.lat %></td>
        <td><%= place.lng %></td>
        <td><%= place.state %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  
  <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#new_place_registration_modal">
  Add Place
  </button>
</div>

 
<%= render 'form', place: @place %>


<script type="text/javascript">
    $('#places_table').DataTable({
        paging: false
    });

    $(document).ready(function() {
        var dataTable = $('#places_table').dataTable();
        $("#searchbox").keyup(function() {
            dataTable.fnFilter(this.value);
        });
    });
</script>



 
 