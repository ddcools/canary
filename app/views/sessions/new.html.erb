

<div class="container">
	<div class="row">
		<div class="col-md-offset-5 col-md-3">
			<p> <%= flash[:notice] %> </p>
			<div class="form-login">
				<h4>Welcome back</h4>
				<%= form_tag(login_path, :method => "post" , class: "navbar-form") do %>
				<%= text_field_tag :email, nil, placeholder: "email", class: "form-control input-md chat-input" %>
				<div class="empty-line"></div>
				<%= password_field_tag :password, nil, placeholder: "password", class: "form-control input-md chat-input" %>
				<div class="empty-line"></div>
				<%= submit_tag "Login", class: "btn btn-primary btn-sm" %>
				<% end %>
			</div>
		</div>
	</div>
</div>