<% if @riders.blank? %>
No records to show.
<% else %>
<table id="riders_table" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <div id="custom_riders_filter_container">
      Search : <input type="text" id="searchbox">
    </div>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Bike</th>
      <th>Age</th>
    </tr>
  </thead>
  <tbody>
    <% @riders.each do |rider| %>
    <tr>
      <td><%= rider.name %></td>
      <td><%= rider.city %></td>
      <td><%= rider.bike %></td>
      <td>
        <% present rider do  |rider_presenter|%>
        <%= rider_presenter.age %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>